{
	"name": "GameSites.cz Forum Tools",
	"description": "N치stroje pre zjednodu코enie pr치ce s port치lom Gamesites.cz",
	"version": "1.3",
	"icons": { "16": "icons/gs16.png",
			"48": "icons/gs48.png",
			"128": "icons/gs128.png" },
	"permissions": [
		"storage",
		"alarms",
		"contextMenus",
		"activeTab",
		"*://gamesites.cz/*",
		"*://www.gamesites.cz/*",
		"*://hlstats.fakaheda.eu/hlxce_*/hlstats.php?mode=search&st=uniqueid&q=*",
		"*://sourcebans.fakaheda.eu/*",
		"https://api.steampowered.com/*"
	],
	"optional_permissions": [
		"notifications"
	],
	"options_ui": {
		"page": "options.html",
		"chrome_style": true
	},
	"web_accessible_resources": [
		"options.html",
		"icons/*.svg",
		"icons/*.png"
	],
	"content_scripts": [
	{
		"js": [ "sites_config.js", "options.js", "steamapikey.js", "handlesid.js", "forum.js" ],
		"css": [ "display.css" ],
		"run_at": "document_idle",
		"matches": [
			"*://gamesites.cz/*",
			"*://www.gamesites.cz/*"
		]
	},
	{
		"js": [ "hlstats_autoredirect.js" ],
		"run_at": "document_end",
		"matches": [
			"*://hlstats.fakaheda.eu/hlxce_*/hlstats.php?mode=search&st=uniqueid&q=*"
		]
	}
	],
	"background": {
		"scripts": ["sites_config.js", "background.js", "contextmenus.js"],
		"persistent": false
	},
	"manifest_version": 2
}
